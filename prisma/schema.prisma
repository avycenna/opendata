generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "sqlite"
}

model Region {
  id        Int      @id @default(autoincrement())
  name      String
  provinces Province[]
}

model Province {
  id        Int      @id @default(autoincrement())
  name      String
  communes  Commune[]

  regionId  Int
  region    Region   @relation(fields: [regionId], references: [id])
}

model Commune {
  id        Int      @id @default(autoincrement())
  name      String
  schools   School[]

  provinceId Int
  province  Province @relation(fields: [provinceId], references: [id])
}

model School {
  id        Int      @id @default(autoincrement())
  name      String
  address   String
  latitude  Float
  longitude Float
  
  communeId Int
  commune   Commune  @relation(fields: [communeId], references: [id])
}
